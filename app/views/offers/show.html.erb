<h1> Chat </h1>

<div class="container">

  <h1>Your Messages</h1>

  <div class="message">
    <ul>
      <% @messages.each do |message| %>
        <% if message.body %>
          <li>
            <h4><%= message.user.email %></h4>
            <p class = "message-body"><%= message.body %></p>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="message-form">
    <%= form_for [@conversation, @message] do |f| %>
      <div class="field">
        <%= f.text_area :body, placeholder: "Your message" %>
      </div>

      <%= f.submit "Send" %>
    <% end %>
  </div>

</div>
