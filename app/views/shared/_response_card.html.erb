<%= link_to request_offer_path(offer.request.id, offer.id) do %>
  <div class="card-container" role="button" @click="handleClick()">
    <div class="card-profile">
      <% if offer.request.user.photo.nil? %>
        <div class="card-photo"></div>
      <% else %>
        <div><%= cl_image_tag offer.user.photo, class:"card-photo" %></div>
      <% end %>
    </div>

    <div class="request-details">
      <% if !offer.messages.empty? %>
        <div class="<% if offer.messages.last.read? %> user-name <% else %> user-name-unread <% end %>"><%= offer.user.name %></div>
      <%end%>
      <div class="user-location">
        <%= offer.request.location %>
      </div>
      <div class="swap-currencies">
        <div>Swapping <%= convert_currency_to_emoji(offer.request.request_currency) %><i class="fas fa-caret-right"> </i> <%= convert_currency_to_emoji(offer.request.wanted_currency) %></div>
      </div>
      <div class="swap-dates">
        <i class="far fa-calendar-alt"></i>
       <%= offer.request.start_date.strftime('%d. %b. %Y') %>
        - <%= offer.request.end_date.strftime('%d. %b. %Y')%>
      </div>
    </div>
    <i class="far fa-envelope chat-icon"></i>
    <div class="swap-amount">
      <%= convert_currency_to_emoji(offer.request.request_currency) %> <%= offer.request.request_amount %>
    </div>
  </div>
<% end %>
