<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "dollar.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <%= link_to "Publish Offer", new_request_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "My Own Offers", personal_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "All Offers", requests_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Upcoming Swaps", offers_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "My Chats", chats_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <!--  <p><small id="count">(0)</small></p> -->

    <div id="counter">
      <%= @messages_unique.length %>
    </div>




    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><%= link_to "Publish Offer", new_request_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "My Own Offers", personal_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "All Offers", requests_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "Upcoming Swaps", offers_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to "My Chats", chats_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><a href="#">Completed Swaps</a></li>
          <li><a href="#">About Us</a></li>
          <% if user_signed_in? %>
          <li>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
          </li>
          <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>
          </li>
          <% end %>


        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Profile</a></li>
        <li><%= link_to "Publish Offer", new_request_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "My Own Offers", personal_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "All Offers", requests_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Upcoming Swaps", offers_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "My Chats (#{@messages_unique.length})", chats_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      <!--   <div id="counter">
      <%#= @messages_unique.length %></div> -->
        <li><a href="#">Completed Swaps</a></li>
        <li><a href="#">About Us</a></li>
        <% if user_signed_in? %>
         <li>
          <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
        </li>
        <% else %>
        <li>
          <%= link_to('Login', new_user_session_path)  %>
        </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>

