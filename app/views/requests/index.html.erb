<div class="filter">
    <div class="filters">

      <div class="form">
          <%= form_tag requests_path, method: :get do %>
              <div class="flex-form">
                <div class="filter-input">
          <%= text_field_tag :location,
          params[:location],
          class: "form-control",
            label: "Location",
            placeholder: "Location" %>
          <%#= f.text_field :location, placeholder: "Location", class:"form-control search-stretch input-field" %>
            </div>
                <div class="filter-input">
            <%= date_field_tag(
                    :start_date, "",
                    as: :string,
                    required: false,
                    class: "form-control datepicker",
                    label: "Start Date",
                    placeholder: "From") %>
              <%#= f.date_field :start_date, as: :string, required: false, class: "datepicker" %>
            </div>
                      <div class="filter-input">
              <%= date_field_tag(
                    :end_date, "",
                    as: :string,
                    required: false,
                    class: "form-control datepicker",
                    label: "End Date",
                    placeholder: "To") %>
              <%#= f.date_field :end_date, required: false, class: "datepicker form-control" %>

                    </div>
              <div class="filter-input">

                <div class="button">
                  <%= submit_tag "Filter", class: "btn btn-success" %>
                </div>
             </div>

              </div>
              <% end %>
            </div>
          </div>
        </div>

        <nav>
          <ol style="overflow-y:scroll">
            <% @requests.each do |request| %>
              <%= render 'shared/card', request: request  %>
            <% end %>
          </ol>
        </nav>

      </div>
    </div>
  </div>
</div>
